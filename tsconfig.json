{
  "compilerOptions": {
    "outDir": "./dist",

    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
